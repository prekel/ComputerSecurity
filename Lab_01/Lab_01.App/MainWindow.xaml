<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Lab_01.App.MainWindow"
        Title="Lab_01.App"
        Width="900"
        MinWidth="500"
        Height="500"
        MinHeight="300">
<Grid Margin="4" >
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="100" />
    <ColumnDefinition Width="1*" MinWidth="200"/>
    <ColumnDefinition Width="1*" MinWidth="200"/>
  </Grid.ColumnDefinitions>
  <Grid.RowDefinitions>
    <RowDefinition Height="1*" MinHeight="50"/>
    <RowDefinition Height="10" />
    <RowDefinition Height="1*" MinHeight="50"/>
  </Grid.RowDefinitions>
  
  <TextBlock Text="Текст:" Grid.Row="0" Grid.Column="0"/>
  <TextBox x:Name="TextTextBox" Text="qweASDzxc" Grid.Row="0" Grid.Column="1" />
  
  <TextBlock Text="Шифротекст:" Grid.Row="2" Grid.Column="0"/>
  <TextBox x:Name="CiphertextTextBox" Grid.Row="2" Grid.Column="1" />

  
  <Grid Grid.Row="0" Grid.Column="2" Margin="4">
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="1*" />
  </Grid.ColumnDefinitions>
  <Grid.RowDefinitions>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="25"/>
    <RowDefinition Height="1*" MinHeight="50"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
  </Grid.RowDefinitions>
    
    <TextBlock Text="Ключ (магический квадрат):" Grid.Row="0" Grid.Column="0"/>
    <ComboBox x:Name="KeysComboBox" Grid.Row="1" Grid.Column="0">
      <ComboBox.SelectionChanged><![CDATA[OnKeysComboBoxSelectionChanged]]></ComboBox.SelectionChanged>
    </ComboBox>
    <TextBox x:Name="KeyTextBox" Grid.Row="2" Grid.Column="0" Text="2 7 6&#x0a;9 5 1&#x0a;4 3 8&#x0a;"/>
    <TextBox x:Name="FillerCharTextBox" Grid.Row="3" Grid.Column="0" Watermark="dfsf" Text=" "/>
    <Button Width="160" Height="25" Content="Обновить ключ" Grid.Row="4" Grid.Column="0">
      <Button.Click><![CDATA[OnRefreshKeyButtonClick]]></Button.Click>
    </Button>
  </Grid>
    
  <StackPanel Grid.Row="2" Grid.Column="2" Margin="4">
    <Button Width="160" Height="25" Content="Зашифровать">
      <Button.Click><![CDATA[OnCryptButtonClick]]></Button.Click>
    </Button>
    <Button Width="160" Height="25" Content="Расшифровать">
      <Button.Click><![CDATA[OnEncryptButtonClick]]></Button.Click>
    </Button>
    <CheckBox Content="Убрать пробелы"></CheckBox>
    <CheckBox Content="Перевести в верхний регистр"></CheckBox>
  </StackPanel>

</Grid>
</Window>
